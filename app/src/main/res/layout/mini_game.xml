<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_farm"
    android:layout_height="match_parent">
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="46dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_back"
            android:paddingStart="10dp"/>
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Minigame"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:gravity="center_vertical"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score: "
            android:textSize="24sp"
            android:textColor="@color/black"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/tv_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="24sp"
            android:layout_marginEnd="20dp"
            android:textColor="@color/black"
            android:layout_gravity="center_vertical"/>
    </TableRow>
    <TextView
        android:id="@+id/tv_card"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:text="what is animal"
        android:textColor="#FD1100"
        android:background="@drawable/bg_serect_mini_game"
        android:gravity="center"
        android:layout_gravity="center"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/tv_a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_mini_game"
        android:text="Elephent"
        android:gravity="center"
        android:textColor="@color/green"
        android:textSize="24sp"
        android:layout_marginHorizontal="40dp"
        android:layout_marginBottom="20dp"
        android:paddingVertical="10dp"/>
    <TextView
        android:id="@+id/tv_b"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_mini_game"
        android:text="Elephent"
        android:gravity="center"
        android:textColor="@color/green"
        android:textSize="24sp"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="40dp"
        android:paddingVertical="10dp"/>
</LinearLayout>